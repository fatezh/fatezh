.post {
  padding: 1rem 0 1rem 1rem;

  p {
    margin: 0 0 1.5rem;
  }
}

.post-title {
  font-size: 2.4rem;
  font-weight: bold;
}

.post-date {
  letter-spacing: 2px;
  text-transform: uppercase;

  font-size: .7rem;
  line-height: 1.14;
}

.post-contents {
  box-sizing: border-box;
  max-width: $content-width;
  padding: 1rem 0;
}
