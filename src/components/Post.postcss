.post {
  padding: 4rem 0 0;

  .outstanding {
    padding: 1rem 0;
    text-align: center;

    font-size: 1.25rem;
  }

  blockquote {
    margin: 0 0 1.5rem;
    padding: 0 0 0 1rem;

    border-left: 5px solid #eee;

    footer {
      text-align: right;
    }
  }

  pre {
    overflow: auto;

    margin-right: -$main-content-diff;
  }

  p {
    margin: 0 0 1.5rem;
  }

  ul {
    margin: 0 0 1.5rem;

    list-style: none;
  }

  ul li:before {
    position: absolute;

    display: inline-block;

    width: 1.5em;
    margin-left: -1.5em;

    content: 'â€”';
    text-align: left;
  }
}

@media (max-width: 50rem) {
  .post pre {
    margin-right: 0;
  }
}

.post-header {
  padding: 0 1rem;
}

.post-title {
  padding: 0 0 .25rem;

  font-size: 2.4rem;
  font-weight: bold;
  line-height: 1.2;

  a {
    text-decoration: none;

    color: inherit;
  }
}

.post-date {
  letter-spacing: 2px;
  text-transform: uppercase;

  font-size: .7rem;
  line-height: 1.14;
}

.post-contents {
  box-sizing: border-box;
  max-width: $content-width;
  padding: 1rem;
}
