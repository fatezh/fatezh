$post-footer-border: 2px solid #000;
$author-img-size: 60px;

.post_footer {
  border-bottom: $post-footer-border;
  box-sizing: border-box;
  max-width: $content-width;
  padding: 1rem;
}

.post_footer-author_img {
  width: $author-img-size;
  height: $author-img-size;
  float: left;
  margin: .2rem 1rem 1rem 0;
}

.post_footer-author {
  font-size: 90%;
}

.post_footer-author_bio {
  font-size: 70%;
  max-width: 23rem;
}
